@using HD_Veriler.Helpers
@using Microsoft.EntityFrameworkCore
@model IEnumerable<ComputerDetail>

@{
    ViewData["Title"] = "ComputerDetailsIndex";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
    var context = DbContextHelper.CreateContext();
}

<!-- start: page -->
<section class="card">
    <header class="card-header">
        <div class="card-actions">
            <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
            <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
        </div>
        <h2 class="card-title">Bilgisayar Bilgileri</h2>
    </header>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <a asp-action="ComputerCreate" asp-controller="Home" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Yeni Bilgisayar Ekle
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead>
                    <tr>
                        <th>Kullanıcı Adı</th>
                        <th>Ram</th>
                        <th>İşletim Sistemi</th>
                        <th>İşlemci</th>
                        <th>HDD Depolama</th>
                        <th>SSD Depolama</th>
                        <th>Ekran Kartı</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string? isim = context.Users.SingleOrDefault(x => x.UserID == item.UserID)?.NameSurname;
                        string userName = !item.Active ? "Boşta" : string.IsNullOrEmpty(isim) ? "Boşta" : isim;
                        string background = !item.Active ? "table-danger" : "";
                        <tr class="@background">
                            <td>@userName</td>
                            <td>@item.Ram</td>
                            <td>@item.Os</td>
                            <td>@item.Cpu</td>
                            <td>@item.StorageHDD</td>
                            <td>@item.StorageSDD</td>
                            <td>@item.DisplayCard</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-info" href="@Url.Action("ComputerDetails", new { id = item.ComputerId })" title="Detayları Görüntüle">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a class="btn btn-warning" href="@Url.Action("ComputerEdit", new { id = item.ComputerId })" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-danger" href="@Url.Action("ComputerDelete", new { id = item.ComputerId })" title="Sil">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
