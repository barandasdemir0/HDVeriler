@model ChangeEquipment
@using HD_Veriler.Helpers
@using Microsoft.EntityFrameworkCore;
@{
    ViewData["Title"] = "DonanimDegismeDetails";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
    var context = DbContextHelper.CreateContext();
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <section class="card">
            <header class="card-header text-center">
                <h2 class="card-title">@ViewBag.username</h2>
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div>
            </header>
            <div class="card-body">
                <table class="table table-striped">
                    <tbody style="font-size: 25px;">

                        <tr>
                            <td><strong>Kullanıcı Adı:</strong></td>
                            <td>
                                @{
                                    string? isim = context.Users.FirstOrDefault(x => x.UserID == Model.UserID)?.NameSurname;
                                    @isim
                                }
                            </td>
                        </tr>

                        <tr>
                            <td><strong>Ekipman Adı:</strong></td>
                            <td>@Html.DisplayFor(model => model.EquipmentName)</td>
                        </tr>

                        <tr>
                            <td><strong>Değişme Tarihi:</strong></td>
                            <td>@Model.ChangeDate.ToString("dd.MM.yyyy")</td>
                        </tr>

                        <tr>
                            <td><strong>Özelliği:</strong></td>
                            <td>@Html.DisplayFor(model => model.Property)</td>
                        </tr>

                        <tr>
                            <td><strong>Değişme Sebebi:</strong></td>
                            <td>
                                <div style="height: 200px; overflow-y: auto;">
                                    @Html.DisplayFor(model => model.Reason)
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </section>
        <div class="mt-3 text-center">
            <a asp-action="DonanimDegismeIndex" class="btn btn-success btn-lg px-5">
                <i class="bx bx-arrow-back"></i> Ekipmana Geri Dön
            </a>
        </div>
    </div>
</div>
