@model ChangeEquipment
@{
    ViewData["Title"] = "DonanimDegismeEdit";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<!-- start: page -->
<form class="ecommerce-form action-buttons-fixed" role="form" asp-action="DonanimDegismeEdit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <section class="card card-modern card-big-info">
                <div class="card-body">

                    <div class="text-center mb-4">
                        <h2 class="card-big-info-title">Değişim Bilgileri</h2>
                        <p class="card-big-info-desc">Kullanıcı parça değişim bilgilerini tüm ayrıntılar ve gerekli bilgilerle birlikte buraya güncelleyin.</p>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label class="control-label">Kullanıcı Seçiniz</label>
                                @Html.DropDownList("UserID",
                                         (IEnumerable<SelectListItem>?)ViewData["userList"],
                                         "Kullanıcı Seçiniz",
                                         new
                                         {
                                             @class = "form-control form-control-modern",
                                         })
                            </div>

                            <div class="form-group">
                                <label class="control-label">Ekipman Adı</label>
                                <input type="text" asp-for="EquipmentName" class="form-control form-control-modern" />
                                <span asp-validation-for="EquipmentName"></span>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Özelliği</label>
                                <input type="text" asp-for="Property" class="form-control form-control-modern" />
                                <span asp-validation-for="Property"></span>
                            </div>

                        </div>

                        <div class="col-lg-6">

                            <div class="form-group">
                                <label class="control-label">Değişim Sebebi</label>
                                <textarea asp-for="Reason" class="form-control form-control-modern" style="height: 130px;"></textarea>
                                <span asp-validation-for="Reason"></span>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Değişme Tarihi</label>
                                <input type="date" asp-for="ChangeDate" class="form-control form-control-modern" />
                                <span asp-validation-for="ChangeDate"></span>
                            </div>

                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>

    <input type="hidden" asp-for="EquipmentId" />

    <div class="row justify-content-center mt-4">
        <div class="col-lg-6 text-center">
            <button type="submit" value="KAYDET" class="btn btn-success btn-lg btn-block" asp-action="DonanimDegismeEdit">
                <i class="bx bx-save"></i> Değişimi Güncelle
            </button>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-lg-6 text-center">
            <a asp-action="DonanimDegismeIndex" class="btn btn-light btn-lg btn-block">
                Geri
            </a>
        </div>
    </div>
</form>
<!-- end: page -->
