@model Entrusted
@using HD_Veriler.Helpers;
@using Microsoft.EntityFrameworkCore;
@{
    ViewData["Title"] = "emanetDelete";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
    var context = DbContextHelper.CreateContext();
}

<!-- start: page -->
<section class="card">
    <header class="card-header">
        <div class="card-actions">
            <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
            <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
        </div>
        <h2 class="card-title">Emanet Bilgileri</h2>
    </header>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped mb-0" id="datatable-editable">
                <thead>
                    <tr>
                        <th>Kullanıcı Adı</th>
                        <th>Laptop</th>
                        <th>Diğer Envanter</th>
                        <th>Alınma Tarihi</th>
                        <th>Geri Gelme Tarihi</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        string? isim = context.Users.FirstOrDefault(x => x.UserID == Model.UserID)?.NameSurname;
                        string? laptop = context.InventoryLaptops.FirstOrDefault(x => x.InventoryId == Model.InventoryId)?.BrandName;
                        string? other = context.OtherInventorys.FirstOrDefault(x => x.OtherInventoryId == Model.OtherInventoryId)?.BrandName;
                    }
                    <tr>
                        <td>@isim</td>
                        <td>@laptop</td>
                        <td>@other</td>
                        <td>@Model.StartDate.ToString("dd.MM.yyyy")</td>
                        <td>@Model.EndDate.ToString("dd.MM.yyyy")</td>
                        <td>@Html.DisplayFor(model => model.Active)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <form asp-action="emanetDelete" method="post">
            <input type="hidden" asp-for="EntrustedId" />
            <div class="row mt-3">
                <div class="col-12">
                    <div class="text-center">
                        <input type="submit" value="Emaneti Sil" onclick="return confirm ('Silmek İstediğinden emin misin?')" class="btn btn-danger">
                        <a asp-action="emanetIndex" class="btn btn-secondary ml-2">Geri</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
