@model Entrusted
@using HD_Veriler.Helpers
@using Microsoft.EntityFrameworkCore;
@{
    ViewData["Title"] = "emanetDetails";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
    var context = DbContextHelper.CreateContext();
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div>
                <div class="actions text-center">
                    <h2 class="card-title">@ViewBag.username</h2>
                </div>
            </header>
            <div class="card-body">
                <table class="table table-responsive-md mb-0">
                    <tbody style="font-size: 15px;">
                        <tr>
                            <td><strong>Emanet:</strong></td>
                            <td>
                                @{
                                    string? laptop = context.InventoryLaptops.FirstOrDefault(x => x.InventoryId == Model.InventoryId)?.BrandName;
                                    string? other = context.OtherInventorys.FirstOrDefault(x => x.OtherInventoryId == Model.OtherInventoryId)?.BrandName;
                                    string? alinanEkipmanAdi = laptop ?? other;
                                    @alinanEkipmanAdi
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Kullanıcı Adı:</strong></td>
                            <td>
                                @{
                                    string? isim = context.Users.FirstOrDefault(x => x.UserID == Model.UserID)?.NameSurname;
                                    @isim
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Emanet Alınma Tarihi:</strong></td>
                            <td>@Model.StartDate.ToString("dd.MM.yyyy")</td>
                        </tr>
                        <tr>
                            <td><strong>Emanet Verilme Tarihi:</strong></td>
                            <td>@Model.EndDate.ToString("dd.MM.yyyy")</td>
                        </tr>
                        <tr>
                            <td><strong>Aktif/Pasif:</strong></td>
                            <td>
                                @{
                                    string activeStatus = Model.Active ? "Emanet Alındı" : "Emanet Boşta";
                                    string color = Model.Active ? "" : "text-danger"; // Kırmızıya yakın bir renk
                                    <span class="@color">@activeStatus</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
        <div class="mt-3 text-center">
            <a asp-action="emanetIndex" class="btn btn-success btn-lg px-5">
                <i class="bx bx-arrow-back"></i> Emanetlere Geri Dön
            </a>
        </div>
    </div>
</div>
