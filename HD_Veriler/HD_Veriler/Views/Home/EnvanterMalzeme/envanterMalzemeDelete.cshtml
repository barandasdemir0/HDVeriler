@model OtherInventory
@using HD_Veriler.Helpers;
@using Microsoft.EntityFrameworkCore;
@{
    ViewData["Title"] = "envanterMalzemeDelete";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
    var context = DbContextHelper.CreateContext();
}

<!-- start: page -->
<section class="card">
    <header class="card-header">
        <div class="card-actions">
            <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
            <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
        </div>
        <h2 class="card-title">Envanter Bilgileri</h2>
    </header>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped mb-0" id="datatable-editable" style="font-size: 15px;">
                <thead>
                    <tr>
                        @{
                            string? isim = context.Users.FirstOrDefault(x => x.UserID == Model.UserID)?.NameSurname;
                            string? departman = context.Departmans.FirstOrDefault(x => x.DepartmanID == Model.DepartmanID)?.DepartmanName;
                        }
                        <th>@isim</th>
                        <th>@departman</th>
                        <th>@Html.DisplayFor(model => model.BrandName)</th>
                        <th>@Model.AddDate.ToString("dd.MM.yyyy")</th>
                        <th>@Html.DisplayFor(model => model.Active)</th>
                        <th>@Html.DisplayFor(model => model.Feature)</th>
                    </tr>
                </thead>
            </table>
        </div>
        <form asp-action="envanterMalzemeDelete" method="post">
            <input type="hidden" asp-for="OtherInventoryId" />
            <div class="row mt-3">
                <div class="col-12">
                    <div class="text-center">
                        <input type="submit" value="Envanteri Sil" onclick="return confirm ('Silmek İstediğinden emin misin?')" class="btn btn-danger">
                        <a asp-action="envanterMalzemeIndex" class="btn btn-secondary ml-2">Geri</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
