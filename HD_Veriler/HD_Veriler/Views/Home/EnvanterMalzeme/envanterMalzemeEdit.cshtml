@model OtherInventory
@{
    ViewData["Title"] = "envanterMalzemeEdit";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<!-- start: page -->
<form class="ecommerce-form action-buttons-fixed" role="form" asp-action="envanterMalzemeEdit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <section class="card card-modern card-big-info">
                <div class="card-body">

                    <div class="text-center mb-4">
                        <h2 class="card-big-info-title">
                            Envanter Bilgileri
                        </h2>
                        <p class="card-big-info-desc">
                            Gerekli tüm bilgileri içeren envanter ayrıntılarını buraya ekleyin.
                            .
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label class="control-label">Departman Seç</label>
                                @Html.DropDownList("DepartmentID",
                                         (IEnumerable<SelectListItem>?)ViewData["departmentList"],
                                         "Departman Seç",
                                         new
                                         {
                                             @class = "form-control form-control-modern",
                                         })
                            </div>

                            <div class="form-group">
                                <label class="control-label">Kullanıcı Seç</label>
                                @Html.DropDownList("UserID",
                                         (IEnumerable<SelectListItem>?)ViewData["userList"],
                                         "Kullanıcı Seç",
                                         new
                                         {
                                             @class = "form-control form-control-modern",
                                         })
                            </div>

                            <div class="form-group">
                                <label class="control-label">
                                    Envanter Adı
                                </label>
                                <input type="text" asp-for="InventoryName" class="form-control form-control-modern" />
                                <span asp-validation-for="InventoryName"></span>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Marka Adı</label>
                                <input type="text" asp-for="BrandName" class="form-control form-control-modern" />
                                <span asp-validation-for="BrandName"></span>
                            </div>

                          
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label">Özellikler</label>
                                <input type="text" asp-for="Feature" class="form-control form-control-modern" />
                                <span asp-validation-for="Feature"></span>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Aktif/Pasif</label>
                                <div class="form-check">
                                    <input type="checkbox" asp-for="Active" class="form-check-input" />
                                    <label class="form-check-label">Aktif</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Eklenme Tarihi</label>
                                <input type="date" asp-for="AddDate" class="form-control form-control-modern" />
                                <span asp-validation-for="AddDate"></span>
                            </div>

                        </div>
                    </div>

                </div>

            </section>
        </div>
    </div>
    <input type="hidden" asp-for="OtherInventoryId" />

    <div class="row justify-content-center mt-4">
        <div class="col-lg-6 text-center">
            <button type="submit" value="SAVE" class="btn btn-success btn-lg btn-block" >
                <i class="bx bx-save"></i> Envanteri Kaydet
            </button>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-lg-6 text-center">
            <a asp-action="envanterMalzemeIndex" class="btn btn-light btn-lg btn-block">
                Geri
            </a>
        </div>
    </div>
</form>
<!-- end: page -->
