@model User
@using HD_Veriler.Helpers
@using Microsoft.EntityFrameworkCore;
@{
    ViewData["Title"] = "UserDetails";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
    var context = DbContextHelper.CreateContext();
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div>
                <div class="actions text-center">
                    <h2 class="card-title">@ViewBag.username</h2>
                </div>
            </header>
            <div class="card-body">
                <table class="table table-responsive-md mb-0">
                    <tbody style="font-size: 15px;">
                        <tr>
                            <td><strong>Adı&Soyadı:</strong></td>
                            <td>@Html.DisplayFor(model => model.NameSurname)</td>
                        </tr>
                        <tr>
                            <td><strong>IP ADRESİ:</strong></td>
                            <td>@Html.DisplayFor(model => model.IPV4Adress)</td>
                        </tr>
                        <tr>
                            <td><strong>Email Adresi:</strong></td>
                            <td>@Html.DisplayFor(model => model.EMail)</td>
                        </tr>
                        <tr>
                            <td><strong>Telefon:</strong></td>
                            <td>@Html.DisplayFor(model => model.Telephone)</td>
                        </tr>
                        <tr>
                            <td><strong>Aktif/Pasif:</strong></td>
                            <td>@Html.DisplayFor(model => model.Active)</td>
                        </tr>
                        <tr>
                            <td><strong>Şifre:</strong></td>
                            <td>@Html.DisplayFor(model => model.Password)</td>
                        </tr>
                        <tr>
                            <td><strong>Departman Liderimi:</strong></td>
                            <td>@Html.DisplayFor(model => model.DepartmanLeader)</td>
                        </tr>
                        <tr>
                            <td><strong>Departman Lideri Numarası:</strong></td>
                            <td>@Html.DisplayFor(model => model.LeadingDepartmentID)</td>
                        </tr>
                        <tr>
                            <td><strong>İşe Başlama Tarihi:</strong></td>
                            <td>@Model.StartDate.ToString("dd.MM.yyyy")</td>
                        </tr>
                        <tr>
                            <td><strong>İşten Çıkış Tarihi:</strong></td>
                            <td>@Model.EndDate.ToString("dd.MM.yyyy")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
        <div class="mt-3 text-center">
            <a asp-action="KullanicilarIndex" class="btn btn-success btn-lg px-5">
                <i class="bx bx-arrow-back"></i> Kullanıcılara Geri Dön
            </a>
        </div>
    </div>
</div>
