@model MonitorDetail
@using HD_Veriler.Helpers
@using Microsoft.EntityFrameworkCore;
@{
    ViewData["Title"] = "MonitorDelete";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
    var context = DbContextHelper.CreateContext();
}

<!-- start: page -->
<section class="card">
    <header class="card-header">
        <div class="card-actions">
            <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
            <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
        </div>
        <h2 class="card-title">Monitör Bilgileri</h2>
    </header>
    <div class="card-body">
        <table class="table table-bordered table-striped mb-0" id="datatable-editable" style="font-size: 15px;">
            <thead>
                <tr>
                    @{
                        string? isim = context.Users.FirstOrDefault(x => x.UserID == Model.UserID)?.NameSurname;
                    }
                    <th>Kullanıcı Adı</th>
                    <th>@Html.DisplayNameFor(model => model.Screen)</th>
                    <th>@Html.DisplayNameFor(model => model.Input)</th>
                    <th>@Html.DisplayNameFor(model => model.Resolution)</th>
                    <th>@Html.DisplayNameFor(model => model.Serino)</th>
                    <th>@Html.DisplayNameFor(model => model.Durum)</th>                  
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>@isim</th>
                    <td>@Html.DisplayFor(model => model.Screen)</td>
                    <td>@Html.DisplayFor(model => model.Input)</td>
                    <td>@Html.DisplayFor(model => model.Resolution)</td>
                    <td>@Html.DisplayFor(model => model.Serino)</td>
                    <td>@Html.DisplayFor(model => model.Durum)</td>                  
                </tr>
            </tbody>
        </table>
        <input type="hidden" asp-for="MonitorId" />
        <form asp-action="MonitorDelete" method="post">
         
            <div class="row mt-3">
                <div class="col-12">
                    <div class="text-center">
                        <input type="submit" value="Monitörü Sil" onclick="return confirm('Silmek İstediğinden emin misin?')" class="btn btn-danger">
                        <a asp-action="monitorIndex" class="btn btn-secondary ml-2">Geri</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
