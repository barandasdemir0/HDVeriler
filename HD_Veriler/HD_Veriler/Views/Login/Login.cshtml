@model User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hidro Dizayn</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800|Shadows+Into+Light" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .logo img {
            max-width: 150px;
        }
    </style>
</head>
<body>
    <form asp-action="Login" asp-controller="Login" method="post">
        <section class="body-sign d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="card card-sign">
                            <div class="card-body">
                                <div class="text-center mb-4">
                                    <a href="/" class="logo">
                                        <img src="~/img/HidroDizayn_Logo.png" height="70" width="600">
                                    </a>
                                    <h1 class="h3 mt-3 font-weight-normal">Giriş Yap</h1>
                                </div>
                                @if (!string.IsNullOrEmpty(ViewBag.error))
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewBag.error
                                    </div>
                                }

                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @* <div asp-validation-summary="ModelOnly"></div> *@
                                    <label>Email</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" asp-for="EMail" required>
                                        <div class="input-group-append">
                                            <span asp-validation-for="EMail" class="input-text"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Şifre</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" asp-for="Password" required>
                                        <div class="input-group-append">
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" asp-for="NameSurname" value="forRequired" />
                                <button type="submit" class="btn btn-lg btn-primary btn-block">Giriş Yap</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</body>
</html>
