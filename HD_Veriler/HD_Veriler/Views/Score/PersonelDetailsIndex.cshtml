@model IEnumerable<User>
@using HD_Veriler.Helpers
@using Microsoft.EntityFrameworkCore
@{
    ViewData["Title"] = "PersonelDetailsIndex";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
    var context = DbContextHelper.CreateContext();
}



<div class="container mt-5">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-8 col-xl-6 mb-4">
                <div class="card border-0 rounded-3 shadow-lg" style="background-color: #f0f0f0;">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="text-center">
                            <h3 class="card-title display-3 mb-4 fw-bold">Kullanıcı</h3>
                            <p class="text-muted lead">@item.NameSurname</p>
                        </div>
                        <div class="text-center">
                            <a class="btn btn-primary btn-lg px-5 me-3" asp-action="ScoreIndex" asp-controller="Score" asp-route-id="@item.UserID">
                                <i class="fas fa-star me-2"></i> Puanla
                            </a>
                            <a class="btn btn-success btn-lg px-5" asp-action="ListScores" asp-controller="Score" asp-route-id="@item.UserID">
                                <i class="fas fa-list-ul me-2"></i> Puanlar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
