@model Score

@{
    ViewData["Title"] = "ScoreIndex";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <h2 class="text-center mb-4">Kullanıcı: @ViewBag.UserName</h2>

                    <form role="form" asp-action="ScoreIndex" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UserID" />

                        <div class="mb-3">
                            @if (ViewBag.Sorular != null)
                            {
                                <div class="form-group">
                                    <label class="control-label">Sorular</label>
                                    <div>
                                        @foreach (var soru in ViewBag.Sorular)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" asp-for="QuestionID" value="@soru.QuestionID">
                                                <label class="form-check-label">@soru.Question</label>
                                            </div>
                                        }
                                    </div>
                                    <span asp-validation-for="QuestionID"></span>
                                </div>
                            }

                            <div class="form-group">
                                <label class="control-label">Cevap</label>
                                <textarea asp-for="Answer" class="form-control form-control-modern" rows="5"></textarea>
                                <span asp-validation-for="Answer"></span>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Puan</label>
                                <input asp-for="Point" class="form-control form-control-modern" min="0" max="100" placeholder="Puan"></input>
                                <span asp-validation-for="Point"></span>
                            </div>

                        </div>

                        <div class="row justify-content-center mt-4">
                            <div class="col-lg-6 text-center">
                                <button type="submit" value="KAYDET" class="btn btn-primary btn-lg btn-block">
                                    <i class="bx bx-save"></i> Puanı Kaydet
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
