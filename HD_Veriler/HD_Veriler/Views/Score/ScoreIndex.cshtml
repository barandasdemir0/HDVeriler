@model Score
@{
    ViewData["Title"] = "ScoreIndex";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

@using Microsoft.AspNetCore.Mvc.Rendering

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <h2 class="text-center mb-4">Kullanıcı: @ViewBag.UserName</h2>

                    <form role="form" asp-action="ScoreIndex" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UserID" />

                        @await Html.PartialAsync("_QuestionList", ViewBag.Sorular as IEnumerable<UQuestion>)



                        <div class="text-center mt-4">
                            <button type="submit" value="KAYDET" class="btn btn-primary btn-lg rounded-pill px-5">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
